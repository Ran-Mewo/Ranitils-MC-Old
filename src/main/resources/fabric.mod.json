{
  "schemaVersion": 1,
  "id": "ranitils",
  "version": "${version}",
  "name": "Ranitils-MC",
  "description": "A small utility mod for Ran (Not to be confused with Ran's utility library \"Ranitils\")",
  "authors": [
    "Ran"
  ],
  "contact": {
    "homepage": "https://ran-helo.github.io/",
    "sources": "https://github.com/Ran-helo/Ranitils-MC"
  },

  "license": "GNU LGPL-2.1",
  "icon": "assets/ranitils/icon.png",

  "environment": "*",
  "entrypoints": {
    "client": [
      "io.github.ran.minecraft.ranitils.RanitilsMod"
    ],
    "modmenu": [
      "io.github.ran.minecraft.ranitils.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "ranitils.mixins.json"
  ],

  "depends": {
    "fabricloader": "*",
    "fabric": "*",
    "cloth-config": "*",
    "minecraft": "*",
    "java": ">=17"
  },

  "suggests": {
    "elytra-recast": "*"
  }
}